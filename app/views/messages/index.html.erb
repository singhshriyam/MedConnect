
<div class="container chat">
  <h1>Messages with Dr. <%= @appointment.doctor.last_name.capitalize %></h1>

  <div id="messages" class="messages">
    <% @appointment.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small><strong><%= message.user.first_name.capitalize %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>
  <div class="container">
      <%= simple_form_for [@appointment, @message], html: {class: "d-flex"} do |f| %>
        <%= f.input :content, label: false, placeholder: "Write your message here ",
          wrapper_html: {class: "flex-grow-1"} %>
        <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
