<div class="container chat d-flex">
  <div class="row w-100">

    <div class="col-md-8">
      <div class="video-container">
        <script>
          let myLink = '<%= @room_link %>';

          const containerChat = document.querySelector('.chat');
          const videoContainer = document.querySelector('.video-container');

          window.callFrame = window.DailyIframe.createFrame(videoContainer, {
            showLeaveButton: true,
            iframeStyle: {
              width: '100%',
              height: `${containerChat.offsetHeight}px`,
              border: '0'
            }
          });

          callFrame.join({ url: myLink });
        </script>
      </div>
    </div>

    <div class="col-md-4">
      <h1>Messages with Dr. <%= @appointment.doctor.last_name.capitalize %></h1>
      <div id="messages" class="messages">
        <% @appointment.messages.each do |message| %>
          <div id="message-<%= message.id %>">
            <small><strong><%= message.user.first_name.capitalize %></strong>
              <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
            </small>
            <p><%= message.content %></p>
          </div>
        <% end %>
      </div>
      <div class="container">
          <%= simple_form_for [@appointment, @message], html: {class: "d-flex"} do |f| %>
            <%= f.input :content, label: false, placeholder: "Write your message here ",
              wrapper_html: {class: "flex-grow-1"} %>
            <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
