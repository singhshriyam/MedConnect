<div class="dr-container">
  <!--card 1 - doctor's picture and description-->
  <div class="picture-card">
    <div class="dr-img">
      <%if @doctor.photo.attached? %>
       <%= cl_image_tag @doctor.photo.key %>
      <% else %>
        <img src="https://hips.hearstapps.com/hmg-prod/images/portrait-of-a-happy-young-doctor-in-his-clinic-royalty-free-image-1661432441.jpg?crop=0.66698xw:1xh;center,top&resize=1200:*">
      <% end %>
    </div>
      <div class="picture-card-text">
        <h1 class="zain blue"> Dr. <%= @doctor.last_name.capitalize %></h1>
        <h2>Speciality: <%= @doctor.specialization.capitalize %></h1>
        <h3>Location: <%= @doctor.city.capitalize %></h3>
        <h3>Experience: <%= @doctor.experience %> Years</h3>
      </div>
  </div>
  <!--card 2 - doctor services and availability card-->
  <div class="doctor-service-card">
    <div class="service">
      <h2 class="zain blue">SERVICES</h2>
        <ul>
          <% @description_list.each do |phrase| %>
            <li><%= phrase %></li>
          <% end %>
        </ul>
    </div>
    <div class="availability">
      <h2 class="zain blue">AVAILABILITY</h2>
      <div class="schedule">
        <ul>
          <% @availability_list.each do |availability| %>
            <li><%= availability %></li>
            <% end %>
        </ul>
      <%= link_to"Book appointment", new_doctor_appointment_path(@doctor), class:"btn-appointment"%>
      </div>
    </div>
    <div class="price">
      <h3 class="zain blue">Price per hour </h3><br><p><%= @doctor.price_per_hour %> â‚¬/h </p>
    </div>
  </div>
  <!--card 3 - languages card-->
  <div class="dr-card">
    <h3 class="zain blue">Languages</h3>
    <div class="dr-languages zain-bold">
      <%@doctor.languages.uniq { |language| "#{language.name}" }.each do |language| %>
        <div class="language-rounded"> <%= language.name.capitalize %>  </div>
      <% end %>
    </div>
  </div>
  <!--card 4- education card-->
  <div class="dr-card">
    <h3 class="zain blue">Education</h3>
    <div class="zain-regular">
      <%=@doctor.education%>
    </div>
  </div>
</div>

  <div class="text-center mt-3 mb-3" id="back-doctors" >
    <%= link_to '< Back to Doctors', doctors_path, class: 'btn-appointment' %>
  </div>
