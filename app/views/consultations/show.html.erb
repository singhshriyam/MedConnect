<div class="container">
  <script>
    let myLink = '<%= @room_link %>';
    if (window.innerWidth <= 600) {
      window.callFrame = window.DailyIframe.createFrame({
      showLeaveButton: true,
          iframeStyle: {
          position: 'fixed',
          bottom: 0,
          width: '100%',
          height: '100%'

          }
    });

      callFrame.join({ url: myLink })
    } else {
          window.callFrame = window.DailyIframe.createFrame({
          showLeaveButton: true,
          iframeStyle: {
          position: 'fixed',
          top: "70px",
          right: 0,
          width: '50%',
          height: '100%'
          }
    });

      callFrame.join({ url: myLink })
    }

  </script>

  <p style="color: green"><%= notice %></p>
  <p><%= @room_link %><%= "No room link" if @room_link.nil? %></p>

</div>
