<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
          <h2>Schedule a New Appointment</h2>
          <p class="mb-0">With Dr. <%= @doctor.full_name %></p>
        </div>
        <div class="card-body">
          <%= simple_form_for [@doctor, @appointment], html: { class: "appointment-form" } do |form| %>
            <div class="mb-3">
              <%= form.input :starts_at, as: :datetime, label: "Start Time", input_html: { class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= form.input :ends_at, as: :datetime, label: "End Time", input_html: { class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= form.input :message, as: :text, label: "Message", input_html: { rows: 4, class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= form.input :symptoms, as: :text, label: "Symptoms", input_html: { rows: 4, class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= form.input :medical_history, as: :text, label: "Medical History", input_html: { rows: 4, class: "form-control" } %>
            </div>
            <div class="text-center">
              <%= form.button :submit, "Create Appointment", class: "btn btn-primary w-30" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to 'Back to Doctor', doctor_path(@doctor), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
