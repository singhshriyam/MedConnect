<div class="container py-5">
  <h1 class="row justify-content-center mb-5 mt-5">Create Your Account</h1>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h3>Sign Up</h3>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <%= f.error_notification %>

            <!-- First Name -->
            <div class="mb-3">
              <%= f.label :first_name, "First Name", class: "form-label" %>
              <%= f.input_field :first_name, class: "form-control", placeholder: "Enter your first name", required: true, autofocus: true, autocomplete: "first_name" %>
            </div>

            <!-- Last Name -->
            <div class="mb-3">
              <%= f.label :last_name, "Last Name", class: "form-label" %>
              <%= f.input_field :last_name, class: "form-control", placeholder: "Enter your last name", required: true, autocomplete: "last_name" %>
            </div>

            <!-- Year of Birth -->
            <div class="mb-3">
              <%= f.label :year_of_birth, "Year of Birth", class: "form-label" %>
              <%= f.input_field :year_of_birth, class: "form-control", placeholder: "Enter your year of birth", required: true, autocomplete: "year_of_birth" %>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.input_field :email, class: "form-control", placeholder: "Enter your email", required: true, autocomplete: "email" %>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.input_field :password, class: "form-control", placeholder: "Enter a password", required: true, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">
                  <%= "#{@minimum_password_length} characters minimum" %>
                </small>
              <% end %>
            </div>

            <!-- Password Confirmation -->
            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= f.input_field :password_confirmation, class: "form-control", placeholder: "Confirm your password", required: true, autocomplete: "new-password" %>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <%= f.submit "Sign Up", class: "btn btn-doc w-100" %>
            </div>
          <% end %>

          <!-- Links -->
          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
