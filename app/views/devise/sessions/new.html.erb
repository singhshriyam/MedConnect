<div class="container py-5">
  <h1 class="row justify-content-center mb-5 mt-5">Welcome Back! Please Log In</h1>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h3>Log In</h3>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <!-- Email -->
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.input_field :email, class: "form-control", placeholder: "Enter your email", required: true, autofocus: true, autocomplete: "email" %>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <%= f.label :password, "Password", class: "form-label" %>
              <%= f.input_field :password, class: "form-control", placeholder: "Enter your password", required: true, autocomplete: "current-password" %>
            </div>

            <!-- Remember Me -->
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="text-center">
              <%= f.submit "Log In", class: "btn btn-doc w-100" %>
            </div>
          <% end %>

          <!-- Links -->
          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
